<h1> Showing Cat </h1>
<table class='table'>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Sex</th>
    <th>Color</th>
    <th>Description</th>
  </tr>

  <tr>
    <td> <%= @cat.name %> </td>
    <td> <%= @cat.age %> </td>
    <td> <%= @cat.sex %> </td>
    <td> <%= @cat.color %> </td>
    <td> <%= @cat.description %> </td>
  </tr>

</table>

<h2>Cat Rentals</h2>

<table class='table'>
  <tr>
    <th>Rental ID</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>

  <% @cat_rental_requests.each do |rental| %>
    <tr>
      <td> <%= rental.id %> </td>
      <td> <%= rental.start_date %> </td>
      <td> <%= rental.end_date %> </td>
      <td> <%= rental.status %> </td>
      <%if rental.status = "PENDING"%>
        <td> <%= button_to  "approve", action: "approve"%> </td>
        <!-- <td> <%= button_to  %> </td> -->
      <% end %>
    </tr>
  <% end %>

</table>
