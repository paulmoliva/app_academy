<!DOCTYPE html>
<html>
<head>
  <title>NinetyNineCatsDay1</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="nav">
  <% if current_user %>
    logged in as <%= current_user.username %>
    <%= button_to "log out", session_url, method: :delete, class: 'btn-danger user_btn' %>
  <% else %>
    <%= button_to "log in", new_session_url, method: :get, class: 'btn-primary user_btn' %>
    <%= button_to "sign up", new_user_url, method: :get, class: 'btn-primary user_btn' %>
  <% end %>
</div>

<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= yield %>

</body>
</html>
