<h1><%= @album.title %></h1>

<h2>Tracks</h2>
<ul>
  <% @album.tracks.each do |track| %>
    <li>
      <%= link_to track.title, track_url(track)%>
    </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_album_url(@album) %>
<%= link_to 'Delete Album', album_url(@album), action: :destroy, method: :delete %>

<% content_for :footer do%>
<% band = Band.find(@album.band_id) %>
Band: <%= link_to "#{band.name}", band_url(band) %>
  <%= link_to "New Album", new_album_url %>
  <%= link_to "New Track", new_track_url %>
<% end %>
